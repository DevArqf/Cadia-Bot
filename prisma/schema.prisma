generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Guild model to represent guild-related information
model Guild {
  id String @id

  // Counting related
  countChannel   String?
  countHighscore Int      @default(0)
  countLastScore Int      @default(0)
  countLastUser  String?
  countLastDate  DateTime @default(now())
  countGoal      Int      @default(100)
  count          Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// User model to represent users
model User {
  id String @id

  balance Int @default(0)
  bank    Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Reward model to represent rewards
model CountingReward {
  id        String   @id
  guildId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  milestone Int
  reward    Int
}

model CountActivity {
  id      String @id @default(uuid())
  userId  String
  guildId String
  count   Int

  @@unique([userId, guildId])
  @@index([userId, guildId])
}
